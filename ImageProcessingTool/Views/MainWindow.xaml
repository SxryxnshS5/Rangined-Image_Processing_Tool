<Window x:Class="ImageProcessingTool.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessingTool.ViewModels"
        mc:Ignorable="d"
        Title="Image Processing Tool" Height="350" Width="525">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Load Image" Command="{Binding LoadImageCommand}" Width="150" Margin="5"/>
            <Button Content="Convert to Grayscale" Command="{Binding ConvertToGrayscaleCommand}" Width="200" Margin="5" 
                    IsEnabled="{Binding ImageLoaded}"/>
            <Button Content="Save Image" Command="{Binding SaveImageCommand}" Width="150" Margin="5" 
                    IsEnabled="{Binding ImageLoaded}"/>
        </StackPanel>
    </Grid>
</Window>